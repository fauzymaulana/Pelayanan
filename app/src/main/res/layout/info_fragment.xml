<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/white"

  android:fitsSystemWindows="true"
  tools:context=".ui.info.InfoFragment">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
            <ImageView
              android:id="@+id/logo"
              android:layout_width="135dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="40dp"
              android:scaleType="matrix"
              android:adjustViewBounds="true"
              android:background="@drawable/iconsapps"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_height="135dp"/>

            <TextView
              android:id="@+id/title"
              android:text="Buku Saku SOP Pelayanan "
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:gravity="center"
              app:layout_constraintTop_toBottomOf="@id/logo"
              android:textSize="22sp"
              android:fontFamily="sans-serif-medium"
              android:layout_marginTop="30dp"
              style="@style/TextAppearance.AppCompat.Title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <TextView
              android:id="@+id/subtitle"
              app:layout_constraintTop_toBottomOf="@id/title"
              android:text="Kantor Pertanahan Deli Serdang"
              android:gravity="center"
              style="@style/TextAppearance.AppCompat.Small"
              android:textColor="@color/black"
              android:fontFamily="sans-serif-medium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <View
              android:id="@+id/line1"
              app:layout_constraintTop_toBottomOf="@id/subtitle"
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:layout_marginStart="25dp"
              android:layout_marginEnd="25dp"
              android:layout_height="1dp"
              android:background="@color/abupekat"/>
            <TextView
              android:id="@+id/isi"
              app:layout_constraintTop_toBottomOf="@id/line1"
              android:text="Aplikasi untuk membaca Standar Operasional Prosedur (SOP) Pelayanan Administrasi Pertanahan terhadap masyarakat di Wilayah Hukum Deli Serdang"
              android:layout_marginTop="20dp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:gravity="center"
              android:textColor="@color/pekat"
              style="@style/TextAppearance.AppCompat.Small"
              android:fontFamily="sans-serif-medium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <View
              android:id="@+id/line2"
              android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/isi"
              android:layout_marginTop="20dp"
              android:layout_marginStart="25dp"
              android:layout_marginEnd="25dp"
              android:layout_height="1dp"
              android:background="@color/abupekat"/>
            <TextView
              android:id="@+id/keb"
              app:layout_constraintTop_toBottomOf="@id/line2"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="Version 1.0"
              android:layout_marginStart="10dp"
              android:layout_marginTop="30dp"
              android:layout_marginEnd="10dp"
              android:gravity="center"
              style="@style/TextAppearance.AppCompat.Small"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</ScrollView>
