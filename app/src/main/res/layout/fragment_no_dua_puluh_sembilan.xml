<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:id="@+id/nodelapan"
android:layout_height="wrap_content"
android:background="@color/white"
android:scrollbars="vertical"
tools:context=".ui.slideshow.BAB2.NoDuaPuluhSembilanFragment">
<FrameLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="50dp"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/subsub3"
      android:layout_marginStart="18dp"
      android:layout_marginEnd="8dp"
      android:textSize="17sp"
      android:text="Perpanjangan Hak Milik Atas Satuan Rumah Susun"
      android:textAlignment="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <RelativeLayout
      android:id="@+id/relisibp2"
      android:layout_below="@id/subsub3"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="7dp"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/dasargb"
        android:layout_width="wrap_content"
        android:text="Dasar Hukum : "
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"/>
      <View
        android:layout_toEndOf="@id/dasargb"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_height="1dp"
        android:background="@color/black"/>
      <RelativeLayout
        android:layout_below="@id/dasargb"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:background="@drawable/backgroundtext"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/isidasargb21"
          android:text="@string/_1"
          android:textSize="@dimen/textrecy"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb21"
          android:layout_toEndOf="@id/isidasargb21"
          android:layout_width="match_parent"
          android:text="UU No. 5/1960"
          android:textSize="@dimen/textrecy"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb22"
          android:text="@string/_2"
          android:layout_below="@id/uugb21"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb22"
          android:layout_below="@id/uugb21"
          android:textSize="@dimen/textrecy"
          android:layout_toEndOf="@id/isidasargb21"
          android:layout_width="match_parent"
          android:text="UU No. 16/1985"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb23"
          android:text="@string/_3"
          android:textSize="@dimen/textrecy"
          android:layout_below="@id/uugb22"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb23"
          android:layout_below="@id/uugb22"
          android:textSize="@dimen/textrecy"
          android:layout_toEndOf="@id/isidasargb22"
          android:layout_width="match_parent"
          android:text="PP No. 4/1988"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb24"
          android:text="4."
          android:textSize="@dimen/textrecy"
          android:layout_below="@id/uugb23"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb24"
          android:layout_below="@id/uugb23"
          android:layout_toEndOf="@id/isidasargb23"
          android:layout_width="match_parent"
          android:text="PP No. 24/1997"
          android:textSize="@dimen/textrecy"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb25"
          android:text="5."
          android:textSize="@dimen/textrecy"
          android:layout_below="@id/uugb24"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb25"
          android:layout_below="@id/uugb24"
          android:layout_toEndOf="@id/isidasargb24"
          android:layout_width="match_parent"
          android:textSize="@dimen/textrecy"
          android:text="PP No. 13/2010"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb26"
          android:text="6."
          android:layout_below="@id/uugb25"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb26"
          android:layout_below="@id/uugb25"
          android:textSize="@dimen/textrecy"
          android:layout_toEndOf="@id/isidasargb23"
          android:layout_width="match_parent"
          android:text="PMNA/KBPN No. 3/1997"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/isidasargb27"
          android:text="7."
          android:layout_below="@id/uugb26"
          android:textSize="@dimen/textrecy"
          android:layout_width="25dp"
          android:layout_height="wrap_content"/>
        <TextView
          android:id="@+id/uugb27"
          android:layout_below="@id/uugb26"
          android:textSize="@dimen/textrecy"
          android:layout_toEndOf="@id/isidasargb27"
          android:layout_width="match_parent"
          android:text="SE KBPN -600-1900 tanggal 31 Juli 2003"
          android:layout_height="wrap_content"/>
      </RelativeLayout>
    </RelativeLayout>

    <TextView
      android:id="@+id/persyaratangb"
      android:layout_width="wrap_content"
      android:text="Persyaratan : "
      android:textSize="17sp"
      android:layout_marginTop="15dp"
      android:layout_below="@id/relisibp2"
      android:layout_marginStart="10dp"
      android:layout_height="wrap_content"/>
    <View
      android:layout_toEndOf="@id/persyaratangb"
      android:layout_width="match_parent"
      android:layout_marginTop="27dp"
      android:layout_marginEnd="7dp"
      android:layout_below="@id/relisibp2"
      android:layout_marginStart="15dp"
      android:layout_height="1dp"
      android:background="@color/black"/>
    <RelativeLayout
      android:id="@+id/relpersyaratangb"
      android:layout_below="@id/persyaratangb"
      android:layout_width="match_parent"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="7dp"
      android:paddingTop="5dp"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:paddingBottom="5dp"
      android:background="@drawable/backgroundtext"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/nosyaratgb21"
        android:text="@string/_1"
        android:textSize="@dimen/textrecy"
        android:layout_width="25dp"
        android:layout_height="wrap_content"/>
      <com.codesgood.views.JustifiedTextView
        android:id="@+id/isisyaratgb1"
        android:gravity="start|end"
        android:justificationMode="inter_word"
        tools:targetApi="o"
        android:layout_toEndOf="@id/nosyaratgb21"
        android:textSize="@dimen/textrecy"
        android:layout_width="match_parent"
        android:text="Formulir permohonan yang sudah diisi dan ditanda tangani pemohonn atau kuasanya diatas materai cukup"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/nosyaratgb22"
        android:text="@string/_2"
        android:layout_below="@id/isisyaratgb1"
        android:textSize="@dimen/textrecy"
        android:layout_width="25dp"
        android:layout_height="wrap_content"/>
      <com.codesgood.views.JustifiedTextView
        android:id="@+id/isisyaratgb2"
        android:gravity="start|end"
        android:justificationMode="inter_word"
        tools:targetApi="o"
        android:layout_below="@id/isisyaratgb1"
        android:textSize="@dimen/textrecy"
        android:layout_toEndOf="@id/nosyaratgb22"
        android:layout_width="match_parent"
        android:text="Surat Kuasa apabila dikuasakan"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/nosyaratgb3"
        android:text="3."
        android:textSize="@dimen/textrecy"
        android:layout_below="@id/isisyaratgb2"
        android:layout_width="25dp"
        android:layout_height="wrap_content"/>
      <com.codesgood.views.JustifiedTextView
        android:id="@+id/isisyaratgb3"
        android:gravity="start|end"
        android:justificationMode="inter_word"
        tools:targetApi="o"
        android:layout_below="@id/isisyaratgb2"
        android:textSize="@dimen/textrecy"
        android:layout_toEndOf="@id/nosyaratgb3"
        android:layout_width="match_parent"
        android:text="Fotocopy identitas (KTP, KK) pemohon dan kuasa apabila dikuasakan, yang telah dicocokkan dengan aslinya oleh petugas loket"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/nosyaratgb4"
        android:text="4."
        android:textSize="@dimen/textrecy"
        android:layout_below="@id/isisyaratgb3"
        android:layout_width="25dp"
        android:layout_height="wrap_content"/>
      <com.codesgood.views.JustifiedTextView
        android:id="@+id/isisyaratgb4"
        android:gravity="start|end"
        android:justificationMode="inter_word"
        tools:targetApi="o"
        android:layout_below="@id/isisyaratgb3"
        android:textSize="@dimen/textrecy"
        android:layout_toEndOf="@id/nosyaratgb4"
        android:layout_width="match_parent"
        android:text="Sertifikat Asli HGB (ada di Kantor Pertanahan yang bersangkutan)"
        android:layout_height="wrap_content"/>
      <TextView
        android:id="@+id/nosyaratgb5"
        android:text="5."
        android:layout_below="@id/isisyaratgb4"
        android:layout_width="15dp"
        android:textSize="@dimen/textrecy"
        android:layout_height="wrap_content"/>
      <com.codesgood.views.JustifiedTextView
        android:id="@+id/isisyaratgb5"
        android:gravity="start|end"
        android:justificationMode="inter_word"
        tools:targetApi="o"
        android:textSize="@dimen/textrecy"
        android:layout_below="@id/isisyaratgb4"
        android:layout_toEndOf="@id/nosyaratgb3"
        android:layout_width="match_parent"
        android:text="Fotocopy SPPT PBB tahun berjalan yang telah dicocokkan dengan aslinya oleh petugas loket"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/relbiayagb2"
      android:layout_below="@id/relpersyaratangb"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="7dp"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/biayagb2"
        android:layout_width="wrap_content"
        android:text="Biaya : "
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>
      <View
        android:layout_toEndOf="@id/biayagb2"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_height="1dp"
        android:background="@color/black"/>
      <RelativeLayout
        android:layout_below="@id/biayagb2"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:background="@drawable/backgroundtext"
        android:layout_height="wrap_content">
        <com.codesgood.views.JustifiedTextView
          android:id="@+id/isibiayagb2"
          android:gravity="start|end"
          android:justificationMode="inter_word"
          tools:targetApi="o"
          android:textSize="@dimen/textrecy"
          android:text="Sesuai ketentuan Peraturan Pemerintah tentang jenis dan tarif atas jenis penerimaan negara bukan pajak yang berlaku pada Badan Pertanahan Nasional Republik Indonesia"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
      android:id="@+id/relwaktugb2"
      android:layout_below="@id/relbiayagb2"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="7dp"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/waktugb2"
        android:layout_width="wrap_content"
        android:text="Waktu : "
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>
      <View
        android:layout_toEndOf="@id/waktugb2"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_height="1dp"
        android:background="@color/black"/>
      <RelativeLayout
        android:layout_below="@id/waktugb2"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:background="@drawable/backgroundtext"
        android:layout_height="wrap_content">
        <RelativeLayout
          android:id="@+id/urut1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
            android:id="@+id/tu"
            android:text="Perpanjangan Hak Guna Bangunan:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textrecy"/>
          <TextView
            android:id="@+id/bullet"
            android:layout_width="15dp"
            android:text="*"
            android:layout_below="@id/tu"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwaktu1"
            android:layout_below="@id/tu"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:textSize="@dimen/textrecy"
            android:text="30 (tiga puluh) hari untuk luasan tidak lebih dari 2.000 m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:id="@+id/bullet2"
            android:layout_width="15dp"
            android:text="*"
            android:layout_below="@id/isiwaktu1"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwakt"
            android:layout_below="@id/isiwaktu1"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet2"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:textSize="@dimen/textrecy"
            android:text="49 (empat puluh sembilan) hari untuk luasan lebih dari 2.000 m2 sampai dengan 150.000 m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:id="@+id/bullet232"
            android:layout_width="15dp"
            android:text="*"
            android:layout_below="@id/isiwakt"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwakt23"
            android:layout_below="@id/isiwakt"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet2"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:textSize="@dimen/textrecy"
            android:text="89 (delapan puluh sembilan) hari untuk luasan lebih dari 150.000 m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/urut2"
          android:layout_marginTop="10dp"
          android:layout_below="@id/urut1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
            android:id="@+id/wa"
            android:text="Pencatatan Perpanjangan Hak Milik Atas Satuan Rumah Susun:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textrecy"/>
          <TextView
            android:id="@+id/bullet1"
            android:layout_width="15dp"
            android:layout_below="@id/wa"
            android:text="*"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwaktu2"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet1"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:layout_below="@id/wa"
            android:textSize="@dimen/textrecy"
            android:text="20 (dua puluh) hari untuk jumlah tidak lebih dari 200 unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:id="@+id/bullet22"
            android:layout_width="15dp"
            android:layout_below="@id/isiwaktu2"
            android:text="*"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwaktu22"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet1"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:layout_below="@id/isiwaktu2"
            android:textSize="@dimen/textrecy"
            android:text="40 (empat puluh) hari untuk jumlah 201 unit s.d. 500 unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:id="@+id/bullet23"
            android:layout_width="15dp"
            android:layout_below="@id/isiwaktu22"
            android:text="*"
            android:layout_height="wrap_content"/>
          <com.codesgood.views.JustifiedTextView
            android:id="@+id/isiwaktu23"
            android:gravity="start|end"
            android:layout_toEndOf="@id/bullet1"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:layout_below="@id/isiwaktu22"
            android:textSize="@dimen/textrecy"
            android:text="90 (sembilan puluh) hari untuk jumlah lebih dari 500 unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
          android:id="@+id/urut3"
          android:layout_marginTop="10dp"
          android:layout_below="@id/urut2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        </RelativeLayout>
      </RelativeLayout>
    </RelativeLayout>

    <!--      disini keterangan-->
    <RelativeLayout
      android:id="@+id/relketerangangb"
      android:layout_below="@id/relwaktugb2"
      android:layout_marginStart="7dp"
      android:layout_marginEnd="7dp"
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:id="@+id/ketgb"
        android:layout_width="wrap_content"
        android:text="Keterangan : "
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>
      <View
        android:layout_toEndOf="@id/ketgb"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:layout_height="1dp"
        android:background="@color/black"/>
      <RelativeLayout
        android:layout_below="@id/ketgb"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:background="@drawable/backgroundtext"
        android:layout_height="wrap_content">
        <com.codesgood.views.JustifiedTextView
          android:id="@+id/isiketgb"
          android:gravity="start|end"
          android:justificationMode="inter_word"
          tools:targetApi="o"
          android:textSize="@dimen/textrecy"
          android:text="Jangka waktu perpanjangan Hak Milik Satuan Rumah Susun meliputi jangka waktu Perpanjangan Hak Guna Bangunan sebagai tanah bersama dan Pencatatan Perpanjangan pada buku tanah dan sertifikat Hak Milik Satuan Rumah Susun"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
        <RelativeLayout
          android:layout_below="@id/isiketgb"
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:layout_height="wrap_content">
          <TextView
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textrecy"
            android:text="Catatan :"/>
          <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isino1"
            android:textSize="@dimen/textrecy"
            android:layout_below="@id/cat"
            android:text="Jangka waktu tidak termasuk tenggang waktu pemenuhan kewajiban pembayaran sesuai SK" />
        </RelativeLayout>
      </RelativeLayout>
    </RelativeLayout>
  </RelativeLayout>
</FrameLayout>
</ScrollView>